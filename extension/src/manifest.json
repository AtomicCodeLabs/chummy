{
  "manifest_version": 2,
  "name": "Tomas",
  "version": "1.0.0",
  "description": "An improvement on Github",
  "browser_action": {
    "default_icon": {
      "16": "icon/default16.png",
      "32": "icon/default32.png"
    }
  },
  "background": {
    "scripts": [
      "background.js",
      "background.app.js",
      "background.firebase.js",
      "background.storage.js"
    ],
    "persistent": false
  },
  "web_accessible_resources": ["background.redirect.inject.js"],
  "permissions": ["tabs", "storage", "*://github.com/*"],
  "icons": {
    "16": "icon/default16.png",
    "32": "icon/default32.png"
  },
  "content_security_policy": "script-src 'self' 'unsafe-eval' https://www.gstatic.com/ https://*.firebaseio.com https://www.googleapis.com https://apis.google.com https://unpkg.com; object-src 'self'"
}
