{
  // Use IntelliSense to learn about possible attributes.
  // Hover to view descriptions of existing attributes.
  // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Launch Dev Server",
      "request": "launch",
      "runtimeExecutable": "yarn",
      "cwd": "${workspaceFolder}/extension",
      "runtimeArgs": ["dev"],
      "type": "pwa-node",
      "resolveSourceMapLocations": [
        "${workspaceFolder}/**",
        "!**/node_modules/**"
      ]
    },
    {
      "name": "Build",
      "request": "launch",
      "runtimeExecutable": "yarn",
      "cwd": "${workspaceFolder}/extension",
      "runtimeArgs": ["build"],
      "type": "pwa-node",
      "resolveSourceMapLocations": [
        "${workspaceFolder}/**",
        "!**/node_modules/**"
      ]
    },
    {
      "name": "Launch Chrome",
      "type": "chrome",
      "request": "launch",
      "port": 9222,
      "url": "https://github.com/alexkim205/chummy",
      "webRoot": "${workspaceFolder}/extension/dist"
    },
    {
      "name": "Attach Chrome",
      "type": "chrome",
      "request": "attach",
      "port": 9222,
      "url": "chrome-extension://dagfciopbcdjofghegmkodmhicjpdgbf",
      "webRoot": "${workspaceFolder}/extension"
    }
  ]
}
